<%- include("partials/header.ejs") %>

<div class="ui main text container">
    <div class="ui huge header">Home</div>

    <div class="ui top attatched segment major">

        <div class="ui divided items">

            <% blogs.forEach(function(blog){ %>

            <div class="item">

                <div class="image">
                    <img src="<%= blog.image %>" alt="">
                </div>

                <div class="content">
                    <a class="header" href="/posts/<%= blog._id %>"><%= blog.title %></a>

                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>

                    <div class="description">
                        <p> <%- blog.body.substring(0, 100) %>... </p>
                    </div>

                    <div class="extra">
                        <a class="ui floated button violet basic" href="/posts/<%= blog._id %>">Read More</a>
                    </div>
                </div>

            </div>

            <% }); %>
        </div>

    </div>

</div>

<%- include("partials/footer.ejs") %>